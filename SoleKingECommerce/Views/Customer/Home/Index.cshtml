@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Slider -->
<div id="carouselExampleIndicators" class="carousel slide mb-5" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/slider1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/slider2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/slider3.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Sản phẩm nổi bật -->
<section class="mb-5">
    <h2 class="text-center mb-4">Sản phẩm nổi bật</h2>
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="~/images/product-@(i+1).jpg" class="card-img-top" alt="Product @(i+1)">
                    <div class="card-body">
                        <h5 class="card-title">Giày thể thao @(i + 1)</h5>
                        <p class="card-text text-danger font-weight-bold">1.200.000đ</p>
                        <div class="d-flex justify-content-between">
                            <a href="#" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                            <a href="#" class="btn btn-sm btn-success">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center">
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Xem tất cả sản phẩm</a>
    </div>
</section>

<!-- Tin tức -->
<section class="mb-5">
    <h2 class="text-center mb-4">Tin tức mới nhất</h2>
    <div class="row">
        @for (int i = 0; i < 3; i++)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="~/images/blog-@(i+1).jpg" class="card-img-top" alt="Blog @(i+1)">
                    <div class="card-body">
                        <h5 class="card-title">Xu hướng giày dép mùa hè 2023</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-sm btn-outline-primary">Đọc tiếp</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>